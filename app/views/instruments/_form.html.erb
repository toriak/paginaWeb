<%= form_for @instrument do |f| %>

  <% if @instrument.errors.any? %>
    <% @instrument.errors.full_messages.each do |msg| %>
      <%flash.alert = msg %>
    <% end %>
  <% end %>

  <div class="well well-lg">
    <p class="text-center">
      <%= f.label :name %> <%= f.text_field :name %>
    </p>
    <p class="text-center">
      <%= f.submit "Crear", :class=>"btn btn-primary btn-lg"%>
      <%= link_to "Cancelar", instruments_path(), :class=>"btn btn-primary btn-lg" %>
    </p>
  </div>
  </div>
</div>
<% end %>