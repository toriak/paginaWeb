<%= form_for @profile do |f| %>

<% if @profile.errors.any? %>
    <% @profile.errors.full_messages.each do |msg| %>
    <%flash.notice = msg %>
  <% end %>
<% end %>

    <div class="well well-lg">
      <p class="text-center">
        <%= f.label :Nombre %>
        <%= f.text_field :name %>
      </p>
      <p class="text-center">
        <%= f.label :Mail %>
        <%= @profile.email %>
      </p>
      <p class="text-center">
        <strong> <%= f.label "Fecha de Nacimiento" %> </strong>
        <%= f.date_select :birth_date, start_year: 1970, end_year: 2015 , :class=>"form-group"%>
      </p>
      <p class="text-center">
        <strong> <%= f.label :Instrumentos %> </strong> <br>
        <%= collection_check_boxes(:profile, :instrument_ids, Instrument.all, :id, :name) %>
      </p>
      <p class="text-center">
        <strong> <%= f.label "Estilos Musicales" %> </strong> <br>
        <%= collection_check_boxes(:profile, :musical_style_ids, MusicalStyle.all, :id, :name) %>
      </p>
      <p class="text-center">
        <%= f.submit "Actualizar Perfil" , :class=> "btn btn-primary btn-lg"%>
      <%= link_to "Cancelar", profile_path(@profile), :class=>"btn btn-primary btn-lg" %>
      </p>
    </div>
  </div>
</div>
<% end %>